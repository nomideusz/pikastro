{
	"name": "picastro",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync 2>/dev/null || true",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"seed": "node --loader ts-node/esm scripts/seed-database.ts",
		"sync": "node --loader ts-node/esm scripts/sync-content-to-json.ts",
		"db:init": "node scripts/init-db.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"autoprefixer": "^10.4.22",
		"postcss": "^8.5.6",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.18",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.16.3",
		"resend": "^6.4.2"
	},
	"optionalDependencies": {
		"@rollup/rollup-win32-x64-msvc": "^4.53.3"
	}
}
